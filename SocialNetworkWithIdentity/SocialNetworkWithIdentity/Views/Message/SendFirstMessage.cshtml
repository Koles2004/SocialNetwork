@model SocialNetworkWithIdentity.Models.ViewModels.FirstMessageViewModel

<link href="~/Content/ParshalMessage.css" rel="stylesheet" />

@using (Html.BeginForm("SendFirstMessage", "Message", FormMethod.Post))
{
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="padding:10px 25px;">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <span class="pull-left">
                        <img src='@Url.Content("~/Content/Images/AccountImages/" + Model.Avatar)' alt="Avatar" width="50" height="50" />
                    </span>
                    <h4>@Model.Name&nbsp;@Model.Surname</h4>
                </div>
                <div class="modal-body" style="padding:10px 25px;">
                    <form role="form">
                        <div class="form-group">
                            @Html.HiddenFor(model => model.Id)
                            @Html.TextAreaFor(model => model.Message, new
                            {
                                @class = "form-control form-group",
                                id = "MessageText",
                                rows = 10,
                                autofocus = true,
                                style = "max-width: none; resize:none;",
                                onkeydown = "if(event.keyCode === 13 && event.ctrlKey) $('#btnAccept').click()"
                            })
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" id="btnAccept" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> Отправить</button>
                    <button type="submit" class="btn btn-danger btn-default pull-right" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Отмена</button>
                </div>
            </div>
        </div>
    </div>
}